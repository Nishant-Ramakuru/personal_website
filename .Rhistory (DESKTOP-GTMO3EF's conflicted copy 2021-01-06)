library(blogdown)
new_site(theme = "wowchemy/starter-academic")
blogdown::new_post(title = "Hi Hugo", ext = '.Rmarkdown', subdir = "post")
options(
# to automatically serve the site on RStudio startup, set this option to TRUE
blogdown.serve_site.startup = FALSE,
# to disable knitting Rmd files on save, set this option to FALSE
blogdown.knit.on_save = FALSE     <- change
blogdown.author = "Emmanuel Teitelbaum",  <- add
blogdown.ext = ".Rmarkdown",      <- add
blogdown.subdir = "post"          <- add
)
blogdown::config_Rprofile()
detach("package:blogdown", unload = TRUE)
